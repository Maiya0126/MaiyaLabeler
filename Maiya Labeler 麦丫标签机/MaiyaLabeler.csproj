    <PostBuildEvent>REM ================= 配置路径 =================
REM 注意：路径中有空格，必须加引号
set MOD_DIR="D:\games\steamapps\common\Rimworld\Mods\MaiyaMod08 Maiya Labeler 麦丫标签机"
set PROJECT_DIR="$(ProjectDir)"

REM ================= 1. 备份 Steam ID =================
REM 如果 About 文件夹里有 PublishedFileId.txt，先把它复制到临时目录存着
if exist %25MOD_DIR%25\About\PublishedFileId.txt (
    copy /y %25MOD_DIR%25\About\PublishedFileId.txt "%25TEMP%25\MaiyaLabeler_ID_Backup.txt"
)

REM ================= 2. 彻底清理旧文件 =================
REM 暴力删除目标文件夹，确保没有残留的垃圾文件
if exist %25MOD_DIR%25\Assemblies rmdir /s /q %25MOD_DIR%25\Assemblies
if exist %25MOD_DIR%25\Defs rmdir /s /q %25MOD_DIR%25\Defs
if exist %25MOD_DIR%25\Languages rmdir /s /q %25MOD_DIR%25\Languages
if exist %25MOD_DIR%25\Textures rmdir /s /q %25MOD_DIR%25\Textures
if exist %25MOD_DIR%25\About rmdir /s /q %25MOD_DIR%25\About

REM ================= 3. 复制 DLL (程序集) =================
REM 创建目录并复制生成的 DLL
if not exist %25MOD_DIR%25\Assemblies mkdir %25MOD_DIR%25\Assemblies
copy /y "$(TargetDir)$(TargetFileName)" %25MOD_DIR%25\Assemblies\

REM 如果你有用到 0Harmony.dll 且输出目录里有，也一起拷过去
if exist "$(TargetDir)0Harmony.dll" copy /y "$(TargetDir)0Harmony.dll" %25MOD_DIR%25\Assemblies\

REM ================= 4. 复制资源文件 =================
REM /s=包含子目录 /y=覆盖不提示 /i=如果目标不存在则视为目录
REM 检测项目里有没有这些文件夹，有才复制，避免报错

if exist %25PROJECT_DIR%25About xcopy /s /y /i %25PROJECT_DIR%25About %25MOD_DIR%25\About
if exist %25PROJECT_DIR%25Defs xcopy /s /y /i %25PROJECT_DIR%25Defs %25MOD_DIR%25\Defs
if exist %25PROJECT_DIR%25Languages xcopy /s /y /i %25PROJECT_DIR%25Languages %25MOD_DIR%25\Languages
if exist %25PROJECT_DIR%25Textures xcopy /s /y /i %25PROJECT_DIR%25Textures %25MOD_DIR%25\Textures

REM ================= 5. 还原 Steam ID =================
REM 如果刚才备份成功了，现在把它放回去
if exist "%25TEMP%25\MaiyaLabeler_ID_Backup.txt" (
    if not exist %25MOD_DIR%25\About mkdir %25MOD_DIR%25\About
    copy /y "%25TEMP%25\MaiyaLabeler_ID_Backup.txt" %25MOD_DIR%25\About\PublishedFileId.txt
    del "%25TEMP%25\MaiyaLabeler_ID_Backup.txt"
)

echo [Maiya Labeler] 部署完成！ID 已保留。</PostBuildEvent>
